{% set title = "Places" %}

{% extends 'layout/base.html.twig' %}
{% block body %}
    <h1>{{ title }}</h1>
    <div class="listContainer">
        <div class="container" id="addContainer" onclick="location='{{ path('place_add') }}'">
            <div class="name">+</div>
        </div>
        {% for place in places %}
            <div class="container" onclick="location='{{ path('place_read', {id: place.id}) }}'">
                <div class="backgroundContainer">
                    <div class="name">{{ place.name }}</div>
                </div>
                <div class="icons">
                    <i class="las la-trash"></i>
                    <i class="las la-edit"></i>
                    <i class="las la-eye"></i>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}


