{% set title = "Places" %}

{% extends 'layout/base.html.twig' %}
{% block body %}
    <div class="titleMenu">
        <div class="title">{{ title }}</div>
    </div>
    <div class="listContainer">
        <div class="container" id="addContainer" onclick="location='{{ path('place_add') }}'">
            <div class="addButton">
                <i class="las la-plus"></i>
            </div>
        </div>
        {% for place in places %}
            <div class="container">
                <div class="backgroundContainer">
                    {% if place.imageFileName %}
                        <img src="{{ vich_uploader_asset(place, 'image') | imagine_filter('thumb') }}" alt="">
                    {% else %}
                        <img src="{{ '/img/img_logo_blue.jpg' | imagine_filter('thumb') }}" alt="">
                    {% endif %}
                    <div class="name">{{ place.name }}</div>
                </div>
                <div class="icons">
                    <i class="las la-trash" onclick="location='{{ path('place_delete', {id: place.id}) }}'"></i>
                    <i class="las la-edit" onclick="location='{{ path('place_edit', {id: place.id}) }}'"></i>
                    <i class="las la-eye" onclick="location='{{ path('place_read', {id: place.id}) }}'"></i>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}


