{% set title = "Connexion" %}
{% set nav = false %}

{% extends 'layout/base.html.twig' %}
{% block body %}
    <img class="wave" src="/img/wave.svg"/>

    <div class="auth animate animateSlideInDown mx-1">
        <h1 class="text-center text-white mb-3">Connexion</h1>
        {{ form_start(form, {'attr': {'class': 'auth-form py-2 px-3'}}) }}
        {% if error %}
            <div class="text-center bg-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="form-group my-3">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {attr : {'class' : 'form-control px-2'}}) }}
        </div>

        <div class="form-group my-3">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {attr : {'class' : 'form-control px-2', 'name': 'password'}}) }}
        </div>

        <div class="checkbox-inline">
            <input id="remember" type="checkbox"><label for="remember">Se souvenir de moi</label>
        </div>

        <div class="legal-mention text-muted my-3">
            <p class="italic"><small>Vos données personnelles ne sont utilisées qu'à des fins d'authentification et ne sont pas partagées avec des tiers.</small></p>
        </div>

        <div class="form-group my-3">
            <input class="btn" type="submit" value="Se connecter">
        </div>
        {{ form_end(form, {'render_rest': false}) }}
    </div>

{% endblock %}
