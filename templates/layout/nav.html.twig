            <li class="link"><a href="{{ path('manageEmployee_index') }}"><i class="las la-2x la-user"></i>User</a></li>
            {% endif %}
            <li class="link"><a href="{{ path('app_logout') }}"><i class="las la-2x la-sign-out-alt"></i>Déconnexion</a></li>
        {% endif %}
