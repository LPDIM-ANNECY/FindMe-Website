            <li class="link"><a href="{{ path('app_login') }}"><i class="lar la-2x la-user"></i>Connexion</a></li>
        {% else %}
            <li class="link"><a href="{{ path('category_index') }}"><i class="las la-2x la-tags"></i>Catégorie</a></li>
