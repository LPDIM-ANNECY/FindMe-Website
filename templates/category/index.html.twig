{% set title = "Cat√©gories" %}

{% extends 'layout/base.html.twig' %}
{% block body %}
    <h1>{{ title }}</h1>
    <div class="listContainer">
        <div class="container" id="addContainer" onclick="location='{{ path('category_add') }}'">
            <div class="name"><i class="las la-plus"></i></div>
        </div>
        {% for category in categories %}
            <div class="container" onclick="location='{{ path('category_read', {id: category.id}) }}'">
                <div class="name">{{ category.name }}</div>
            </div>
        {% endfor %}
    </div>
{% endblock %}


