{% set title = "Cat√©gorie" %}

{% extends 'layout/base.html.twig' %}
{% block body %}
    <div class="listContainer">
        <div class="titleMenu">
            <i class="las la-arrow-left" onclick="location='{{ path('category_index') }}'"></i>
            <div class="title">{{ title }}</div>
            <i class="las la-trash" onclick="location='{{ path('category_delete', {id: category.id}) }}'"></i>
            <i class="las la-edit" onclick="location='{{ path('category_edit', {id: category.id}) }}'"></i>
        </div>

        <div class="container view">
            <div class="backgroundContainer">
                <div class="name">{{ category.name }}</div>
            </div>
        </div>
    </div>
{% endblock %}


